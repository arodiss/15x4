{% extends 'layout.html.twig' %}

{% block page_title %}{{ '15x4 — войти' | trans }}{% endblock %}

{% block content %}
    <div class="row" style="margin-top: 10px;">
        <div class="col-lg-12">
            <div style="border-left: 2px solid red; padding-left: 18px;">
                <h2>{{ 'Войти на сайт' | trans }}</h2>
                <p>{{ 'После входа вы сможете голосовать за лекции, оставлять комментарии, сохранять лекции в избранное - и многое другое' | trans }}</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <a class="btn btn-login" style="background-color: #3b5998;" href="{{ hwi_oauth_login_url('facebook') }}">
                <i class="fa-stack">
                    <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                    <i class="fa fa-square-o fa-stack-2x fa-inverse"></i>
                </i>
                {{ 'Войти через' | trans }} Facebook
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <a class="btn btn-login" style="background-color: #55acee;" href="{{ hwi_oauth_login_url('twitter') }}">
                <i class="fa-stack">
                    <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                    <i class="fa fa-square-o fa-stack-2x fa-inverse"></i>
                </i>
                {{ 'Войти через' | trans }} Twitter
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <a class="btn btn-login" style="background-color: #dd4b39;" href="{{ hwi_oauth_login_url('google') }}">
                <i class="fa-stack">
                    <i class="fa fa-google fa-stack-1x fa-inverse"></i>
                    <i class="fa fa-square-o fa-stack-2x fa-inverse"></i>
                </i>
                {{ 'Войти через' | trans }} Google
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <a class="btn btn-login" style="background-color: #45668e;" href="{{ hwi_oauth_login_url('vkontakte') }}">
                <i class="fa-stack">
                    <i class="fa fa-vk fa-stack-1x fa-inverse"></i>
                    <i class="fa fa-square-o fa-stack-2x fa-inverse"></i>
                </i>
                {{ 'Войти через' | trans }} Vkontakte
            </a>
        </div>
    </div>
{% endblock %}
