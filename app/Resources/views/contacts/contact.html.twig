<div class="contact" data-goals='{{ contact.goalsData | json_encode }}'>
    <div class="contact-img">
        <img src="{{ asset('bundles/app/images/contacts/' ~ contact.picture) }}" alt="{{ contact.name }}"/>
    </div>
    <div class="contact-info">
        <div class="contact-name">{{ contact.name }}</div>
        <div class="contact-goal"">{{ contact.goal }}</div>
        <div class="contact-city">{{ contact.city | contact_city }}</div>
        {% if contact.fb is defined %}
            <a href="https://fb.com/{{ contact.fb }}">fb</a>
        {% endif %}
        {% if contact.vk is defined %}
            <a href="https://vk.com/{{ contact.vk }}">vk</a>
        {% endif %}
        {% if contact.email is defined %}
            <a href="mailto:{{ contact.email }}">email</a>
        {% endif %}
    </div>
</div>
