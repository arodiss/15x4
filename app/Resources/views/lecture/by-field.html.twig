{% extends 'shared/lecture-list.html.twig' %}

{% block page_title %}15x4 — {{ field | trans }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row" style="margin-top: 10px;">
            <div class="col-lg-6" style="min-height: 315px;">
                <img
                    style="position: absolute; left: -20px;"
                    src="/bundles/app/images/fields/{{ field.getImageName() ? : field.getDefaultImageName() }}"
                />
            </div>
            <div class="col-lg-6">
                <h5>
                    <i>
                        {{ field.getDescription() }}
                    </i>
                </h5>
                {% if tags|length > 0  %}
                    {% include "shared/tag-list.html.twig" with { 'tags': tags | head(40), 'field': field } %}
                    {% if tags|length > 40  %}
                        (... {{ 'ещё' | trans }} {{ tags|length - 40 }})
                        <br/>
                        <a href='{{ path('Tags') }}'>{{ 'Все теги' | trans }}</a>
                    {% endif %}
                {% else %}
                    <hr/>
                {% endif %}
            </div>
        </div>
        <hr/>
    </div>

    {{ parent() }}
{% endblock %}

{% block listHeader %}{% endblock %}
