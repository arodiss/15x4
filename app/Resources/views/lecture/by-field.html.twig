{% extends 'shared/lecture-list.html.twig' %}

{% block page_title %}15x4 â€” {{ field }}{% endblock %}

{% block header %}
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <img
                    src="/bundles/app/images/fields/{{ field.getImageName() ? : field.getDefaultImageName() }}"
                />
            </div>
            <div class="col-lg-6">
                <h3 class="text-capitalize">{{ field }}</h3>
                {% if tags|length > 0  %}
                    {% include "shared/tag-list.html.twig" with { 'tags': tags, 'field': field, 'columnsCount': 4 } %}
                {% else %}
                    <hr/>
                {% endif %}
            </div>
        </div>
        <hr/>
    </div>
{% endblock %}

{% block listHeader %}
    <blockquote>
        {{ field.getDescription() }}
    </blockquote>
{% endblock %}
