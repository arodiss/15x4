        {% endif %}
        {% block footer %}{% include "footer.html.twig" %}{% endblock %}

        {% block scripts %}
            {% javascripts
                '@AppBundle/Resources/public/js/popper.js'
                '@AppBundle/Resources/public/js/jquery.js'
                '@AppBundle/Resources/public/js/selectize.js'
