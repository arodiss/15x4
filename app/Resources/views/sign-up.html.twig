{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block content %}
    <h1 class="text-center">{{ event }}</h1>
    <h2 class="text-center">{{ 'Зарегистрироваться на встречу' | trans }}</h2>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="d-none">{{ form_row(form.announcement) }}</div>
            {{ form_row(form.name) }}
            <div id="extra" class="btn btn-secondary">
                {{ 'Я буду не один' | trans }}
            </div>
            <div class="d-none">{{ form_row(form.extra) }}</div>
        </div>
        <div class="col-md-6" style="border-left: 1px solid #1b1b1b;">
            <div id="volunteer" class="btn btn-secondary">{{ 'Я хочу поучаствовать в проекте' | trans }}!</div>
            <div class="d-none">
                {{ form_row(form.contact) }}
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-12">
            <input class="btn btn-primary" type="submit" value="{{ "Запишите меня!" | trans }}"/>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(function () {
            $('#volunteer').click(function () {
                $(this).hide();
                $(this).next().removeClass('d-none');
            });

            $('#extra').click(function () {
                $(this).hide();
                $(this).next().removeClass('d-none');
            });
        });
    </script>
{% endblock %}
