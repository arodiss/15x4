{% extends 'layout.html.twig' %}

{% block content %}
    {% include 'upcoming-events.html.twig' %}

    <h2 class="text-center" style="width: 100%;">Недавние лекции</h2>

    <table class="table table-responsive noborders">
        <tr style="background-color: cornsilk;">
            {% for lecture in featured_lectures %}
                <td style="width: 25%; border-style: none;">
                    {% include 'shared/lecture-plate.html.twig' %}
                </td>
            {% endfor %}
        </tr>
        {% for event in recentEvents %}
            <tr>
                {% for lecture in event.lectures | head(4) %}
                    <td style="width: 25%; border-style: none;">
                        {% include 'shared/lecture-plate.html.twig' %}
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>

    <div class="row" style="margin-bottom: 15px;">
        <div class="col-lg-4 col-lg-offset-4">
            <a class="btn btn-default" style="width: 100%; font-size: 140%;" href="{{ path("LectureList") }}">Все видео</a>
        </div>
    </div>

{% endblock %}
