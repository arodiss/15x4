{% for tag in tags %}
    {% if loop.index0 is divisible by(columnsCount) %}<div class="row" style="margin-top: 8px; margin-bottom: 5px;{% if loop.index0 != 0 %} border-top: 1px solid lightgray;{% endif %}">{% endif %}

    <div class="col-lg-{{ 12 / columnsCount }}">
        <a href="{{ path("LectureList", { tags: tag.id, fields: field.id }) }}">
            #{{ tag.name }} ({{ tag.lecture_count }})
        </a>
    </div>

    {% if loop.index is divisible by(columnsCount) %}</div>{% endif %}
{% endfor %}

{#fix last row#}
{% if tags|length is not divisible by(columnsCount) %}
    </div>
{% endif %}

{% if tags|length == 0 %}
    <p class="text-muted">
        (нет тегов)
    </p>
{% endif %}
