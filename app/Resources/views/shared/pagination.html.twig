{% if pagination.pageCount > 1 %}
    <div class="row">
        <div class="col-lg-12">
            <nav class="pull-right">
                <ul class="pagination">
                    {% if pagination.current != 1 %}
                        <li class="page-item"><a class="page-link" href="?page={{ pagination.current-1 }}">{{ 'Предыдущая' | trans }}</a></li>
                        <li class="page-item"><a class="page-link" href="?page=1">1</a></li>
                    {% endif %}
                    {% if pagination.current >= 4 %}
                        <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                    {% endif %}
                    {% if pagination.current >= 3 %}
                        <li class="page-item"><a class="page-link" href="?page={{ pagination.current - 1 }}">{{ pagination.current - 1 }}</a></li>
                    {% endif %}
                    <li class="page-item active"><a class="page-link" href="#">{{ pagination.current }}</a></li>
                    {% if pagination.last - pagination.current >= 2 %}
                        <li class="page-item"><a class="page-link" href="?page={{ pagination.current + 1 }}">{{ pagination.current + 1 }}</a></li>
                    {% endif %}
                    {% if pagination.last - pagination.current >= 3 %}
                        <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                    {% endif %}
                    {% if pagination.current != pagination.last %}
                        <li class="page-item"><a class="page-link" href="?page={{ pagination.last }}">{{ pagination.last }}</a></li>
                        <li class="page-item"><a class="page-link" href="?page={{ pagination.current + 1 }}">{{ 'Следующая' | trans }}</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p class="small text-muted text-right">
                {{ 'Показаны элементы с %s по %s, из %s' | trans | format(pagination.firstItemNumber, pagination.lastItemNumber, pagination.totalCount) }}
            </p>
        </div>
    </div>
{% endif %}
