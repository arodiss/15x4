<div class="row text-center lecture-reactions" style="font-size: 150%;" data-lecture-id="{{ lecture.id }}">
    <div class="col-lg-3">
        <span
            class="glyphicon glyphicon-thumbs-up tooltip-toggle cursor-pointer like{% if app.user.didLectureLike(lecture) %} active{% endif %}"
            data-title="Нравится"
        ></span>
        <span class="like-count">{{ lecture.likesCount }}</span>
    </div>
    <div class="col-lg-3">
        <span
            class="glyphicon glyphicon-thumbs-down tooltip-toggle cursor-pointer dislike{% if app.user.didLectureDislike(lecture) %} active{% endif %}"
            data-title="Не нравится"
        ></span>
        <span class="dislike-count">{{ lecture.dislikesCount }}</span>
    </div>
    <div class="col-lg-3">
        <span
            class="glyphicon glyphicon-star tooltip-toggle cursor-pointer favorite{% if app.user.didLectureFav(lecture) %} active{% endif %}"
            data-title="Избранное"
        ></span>
        <span class="fav-count">{{ lecture.favsCount }}</span>
    </div>
    <div class="col-lg-3">
        <span
            class="glyphicon glyphicon-comment tooltip-toggle"
            data-title="Комментарии"
        ></span>
        <span>{{ lecture.commentsCount }}</span>
    </div>
</div>
