{% extends 'layout.html.twig' %}

{% block page_title %}15x4 — Теги{% endblock %}

{% block content %}
    <div class="panel panel-default" style="margin-top: 10px;">
        <div class="panel-heading">
            Всего тегов: {{ tags|length }}
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <div id="cloud-container" style="height: 300px;"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        var colors = ['deeppink', 'salmon', 'crimson', 'indianred', 'firebrick', 'tomato', 'darkorange', 'darkkhaki',
            'gold', 'rosybrown', 'goldenrod', 'chocolate', 'sienna', 'brown', 'maroon', 'darkolivegreen', 'limegreen',
            'olivedrab', 'springgreen', 'seagreen', 'forestgreen', 'mediumaquamarine', 'lightseagreen', 'teal',
            'cadetblue', 'steelblue', 'navy', 'lightsteelblue', 'blueviolet', 'darkslateblue', 'darkslategray'
        ];

        $('#cloud-container').jQCloud(
            [
                {% for tag in tags %}
                    {
                        text: '{{ tag.name }}',
                        weight: 1,
                        link: '{{ path('LectureList', { 'tags': tag.id }) }}',
                        afterWordRender: function () {
                            $(this).find('a').css('color', colors[Math.floor(Math.random() * colors.length)]);
                        }
                    }
                    {% if not loop.last %},{% endif %}
                {% endfor %}
            ],
            { delayedMode: true }
        );
    </script>
{% endblock %}
