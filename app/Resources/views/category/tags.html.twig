{% extends 'layout.html.twig' %}

{% block page_title %}15x4 — Теги{% endblock %}

{% block content %}
    <h1 class="page-header">Количество тегов: {{ tags|length }}</h1>

    {% for tag in tags %}
        <h3><a href="{{ path("LectureFiltered", { "tag": tag.id }) }}">{{ tag.name }} ({{ tag.lectures_count }})</a></h3>
        <hr/>
    {% endfor %}
{% endblock %}
