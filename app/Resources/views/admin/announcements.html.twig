{% extends "admin/layout.html.twig" %}

{% block admin_content %}
    
    <ul class="nav nav-tabs" role="tablist">
        {% for city in cities %}
            <li role="presentation"{% if loop.first %} class="active"{% endif %}>
                <a href="#city-{{ city.id }}" aria-controls="city-{{ city.id }}" role="tab" data-toggle="tab" class="tab-toggle">
                    {% if not city.hasValidAnnouncement() %}
                        <span style="color: red;" class="glyphicon glyphicon-exclamation-sign"></span>
                    {% endif %}
                    {{ city }}
                </a>
            </li>
        {% endfor %}
    </ul>

    <div class="tab-content">
        {% for city in cities %}
            <div id="city-{{ city.id }}" role="tabpanel" class="row tab-pane{% if loop.first %} active{% endif %}">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {{ city }} - анонсы
                        </div>

                        <div class="panel-body">
                            {% if city.announcements | length > 0 %}
                                <table class="table table-striped table-hover">
                                    <tbody>
                                    {% for announcement in city.announcements %}
                                        <tr>
                                            <td>{{ announcement.date | date }}</td>
                                            <td class="pull-right">
                                                <a href="{{ path("EventFromAnnouncement", { "id": announcement.id }) }}"><span class="glyphicon glyphicon-ok-sign"></span></a>
                                                <a href="{{ path("AdminAnnouncementEdit", { "id": announcement.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>
                                                <a class="delete" href="{{ path("AdminAnnouncementDelete", { "id": announcement.id }) }}"><span class="glyphicon glyphicon-trash"></span></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            {% else %}
                                <div class="row">
                                    <div class="col-lg-12">
                                        <i class="text-muted">
                                            В этом городе нет анонсов
                                        </i>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-lg-12">
                                    <hr/>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <a class="btn btn-primary" href="{{ path("AddAnnouncement", { 'id': city.id }) }}">
                                        <span class="glyphicon glyphicon-plus-sign" style="color: white;"></span>
                                        &nbsp;
                                        Добавить анонс
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
