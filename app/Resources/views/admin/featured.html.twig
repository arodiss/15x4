{% extends "admin/layout.html.twig" %}

{% block admin_content %}
    <div class="row">
        <div class="col-lg-6">
            <h2>
                Рекомендованые лекции
            </h2>
        </div>
        <div class="col-lg-2">
            <h2 class="pull-right text-muted" style="font-size: 140%;">
                Добавить:
            </h2>
        </div>
        <div class="col-lg-4" style="position: relative; bottom: -12px;">
            <select id="enfeature" multiple>
                {% for lecture in unfeatured_lectures %}
                    <option value="{{ lecture.id }}">{{ lecture.title }} ({{ lecture.event.city }})</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Название</th>
            <th>Дисциплина</th>
            <th>Лектор</th>
            <th>Ивент</th>
            <th>Теги</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for lecture in featured_lectures %}
            <tr>
                <td>{{ lecture.title }}</td>
                <td>{{ lecture.field }}</td>
                <td>{{ lecture.lecturer }}</td>
                <td>{{ lecture.event.city }}, {{ lecture.event.date | date }}</td>
                <td>{{ lecture.tags | join(", ") }}</td>
                <td>
                    <a
                            href="{{ path("AdminLectureUnfeature", { "id": lecture.id }) }}"
                            title="Убрать из рекомендованных"
                    >
                        <span class="glyphicon glyphicon-chevron-down"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function() {
            $('#enfeature').selectize({
                'placeholder': 'Выбрать...',
                'onItemAdd': function (id) {
                    window.location.replace('/admin/lectures/' + id + '/enfeature');
                }
            });
        });
    </script>
{% endblock %}
