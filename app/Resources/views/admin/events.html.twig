{% extends "admin/layout.html.twig" %}

{% block admin_panel_header %}
    Наши встречи
{% endblock %}

{% block admin_content %}
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Город</th>
            </tr>
        </thead>
        <tbody>
            {% for event in entities %}
                <tr>
                    <td>{{ event.date | date }}</td>
                    <td>{{ event.city }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
